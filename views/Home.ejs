<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" href="/img/logo.png" type="image/x-icon">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <title>Be_Insure</title>
    <%- include('./partials/css/style.ejs') %>
    <style>
    nav ul,.btn button {
        display: none;
    }
    #logout{
        display: block;
    }
    main {
        width: fit-content;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        margin: 0 auto;
    }
    .greeting {
        padding: 20px;
        font-family: sans-serif;
        font-size: 30px;
    }
    .dashboard {
        width: 1200px;
        height: 50vh;
        border-radius: 20px;
        background-color: rgba(255, 127, 80, 0.397);
        margin: 10px;
        padding: 10px;
        display: flex;
        /* align-items: center; */
        justify-content: space-around;
    }

    .plan {
        padding: 20px;
        font-size: 40px;
    }
    .plan h2 {
        font-size: 40px;
        padding: 20px;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }
    .plan_name {
        display: flex;
        align-items: center;
        font-family: sans-serif;
        gap: 10px;
    }
    .plan img {
        display: block;
        width: 100px;
        height: 100px;
        border-radius: 50%;
    }

    .activate_plan {
        width: 400px;
        padding: 20px;
        font-size: 30px;
        font-family: sans-serif;
    }
    .activate_plan p {
        display: flex;
        align-items: center;
        padding: 20px;
    }
    .activate_plan h2 {
        padding: 20px;
        font-size: 40px;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }
 #verify {
    width: 200px;
    padding: 20px;
    border: none;
    background-color: green;
    border-radius: 20px;
 }
    main button {
        width: 200px;
        padding: 20px;
        border: none;
        border-radius: 10px;
        color: #fff;
        background-color: green;
        margin: 0 auto;
        cursor: pointer;
    }
</style>
</head>
<body>
    <%- include('./partials/components/nav.ejs') %>
    <main>
    <div class="greeting">
         <h2>Welcome  <span id="user_name"><%= user.first_name %></span></h2>
    </div>
   <div class="dashboard">
   <div class="plan">
    <h2>Insurance Plan</h2>
    <div class="plan_name">
    <img src="/img/<%= user.plan %>.jpg" alt="medal">
    <p><%= user.plan %></p>
</div>
   </div>
   <div class="activate_plan">
    <% if (user.isPaymentVerified === false) { %>
    <h2>Plan status</h2>
    <p>
        <span class="material-symbols-outlined" style="font-size: 30px; color: red;">
            pending
    </span>
    Pending..
    </p>
    <% } %>
    <% if (user.isPaymentVerified === true) { %>
        <h2>Plan status</h2>
          <p>
        <span class="material-symbols-outlined" style="font-size: 30px; color: green;">
            check_circle
    </span>
    Activated
    </p>
    <% } %>
    <% if (user.verifyPaymentRef) { %>
        <button id="verify">verify payment</button>
        <% } %>
   </div>
   </div>
   <p id="email" style="margin: 0 auto; padding: 10px; font-family: sans-serif; font-weight: bolder;"><%= user.email %></p>
   <button id="btn"> make payment </button>
   </main>
</body>
</html>


<script>
    // location.reload()
 const btn = document.getElementById('btn');
  btn.addEventListener('click', async ()=> {
   const email = document.getElementById('email').innerHTML;
   const res = await fetch( '/api/pay/initializePayment', {
      method: 'POST',
      body: JSON.stringify({email: email}),
      headers: { 'Content-Type': 'application/json'}
     })
     const data = await res.json()
     console.log(data.data);
 location.assign(data.data.confirmationUrl)
  })
 const verify = document.getElementById('verify');
 if (verify) {
    verify.addEventListener('click', async()=> {
    const email = document.getElementById('email').innerHTML;
     const res = await fetch( '/api/pay/verifyPayment', {
      method: 'POST',
      body: JSON.stringify({email: email}),
      headers: { 'Content-Type': 'application/json'}
     })
     const data = await res.json()
     console.log(data.data);
     location.reload()
 })
 }
 
</script>